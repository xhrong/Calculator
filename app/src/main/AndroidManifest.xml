<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="home.jmstudios.calc"
    android:versionCode="23"
    android:versionName="1.1" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="22" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="home.jmstudios.calc.Main"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="home.jmstudios.calc.Preferences"
            android:label="@string/title_activity_settings"
            android:parentActivityName="home.jmstudios.calc.Main" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="home.jmstudios.calc.Main" />
        </activity>
        <activity
            android:name="home.jmstudios.calc.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="home.jmstudios.calc.About"
            android:label="@string/title_activity_about"
            android:parentActivityName="home.jmstudios.calc.Main" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="home.jmstudios.calc.Main" />
        </activity>
    </application>

</manifest>