<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/AppTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0010B286"
    android:focusable="false"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:paddingBottom="0dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:paddingBottom="36dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="20" >

                    <EditText
                        android:id="@+id/editText1"
                        style="@style/ResultTheme"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="20"
                        android:background="@drawable/textfield_darkblue"
                        android:clickable="false"
                        android:ems="10"
                        android:gravity="right"
                        android:inputType="numberDecimal|numberSigned"
                        android:longClickable="true"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:maxLines="1"
                        android:onClick="onClickListener_input"
                        android:padding="5dp"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:text="0.0"
                        android:textColor="#35444f"
                        android:textSize="30sp" >

                        <requestFocus />
                    </EditText>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:background="#FFC95C"
                        android:orientation="horizontal" >

                        <Button
                            android:id="@+id/button_del"
                            style="@style/AdvButOrange"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:clickable="true"
                            android:minHeight="48dp"
                            android:minWidth="48dp"
                            android:onClick="onClickListener_del"
                            android:padding="10dp"
                            android:text="@string/delete_numbers" />

                        <Button
                            android:id="@+id/buttonReset"
                            style="@style/AdvButOrange"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="1dp"
                            android:minHeight="48dp"
                            android:minWidth="48dp"
                            android:maxLines="1"
                            android:onClick="onClickListenerReset"
                            android:padding="10dp"
                            android:text="CE"
                            android:textSize="20sp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="horizontal" >

                <LinearLayout
                    style="@style/norm_buttons"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/linearLayout1"
                        style="@style/norm_buttons"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <Button
                            android:id="@+id/button7"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:onClick="onClickListener7"
                            android:text="7" />

                        <Button
                            android:id="@+id/button8"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:onClick="onClickListener8"
                            android:text="8" />

                        <Button
                            android:id="@+id/button9"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1.00"
                            android:onClick="onClickListener9"
                            android:text="9" />

                        <Button
                            android:id="@+id/buttonPlus"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:onClick="onClickListenerPlus"
                            android:text="+" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout1"
                        style="@style/norm_buttons"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <Button
                            android:id="@+id/button4"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:onClick="onClickListener4"
                            android:text="4" />

                        <Button
                            android:id="@+id/button5"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:onClick="onClickListener5"
                            android:text="5" />

                        <Button
                            android:id="@+id/button6"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1.00"
                            android:onClick="onClickListener6"
                            android:text="6" />

                        <Button
                            android:id="@+id/buttonMinus"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1.00"
                            android:onClick="onClickListenerMinus"
                            android:text="-" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout1"
                        style="@style/norm_buttons"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <Button
                            android:id="@+id/button1"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:onClick="onClickListener1"
                            android:text="1" />

                        <Button
                            android:id="@+id/button2"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:onClick="onClickListener2"
                            android:text="2" />

                        <Button
                            android:id="@+id/button3"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:onClick="onClickListener3"
                            android:text="3" />

                        <Button
                            android:id="@+id/buttonMultiply"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:onClick="onClickListenerMultiply"
                            android:text="*" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout3"
                        style="@style/norm_buttons"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <Button
                            android:id="@+id/buttonPoint"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:onClick="onClickListenerPoint"
                            android:text="." />

                        <Button
                            android:id="@+id/button0"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:onClick="onClickListener0"
                            android:text="0" />

                        <Button
                            android:id="@+id/buttonEqual"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:background="@color/normal_button_bg"
                            android:onClick="onClickListenerEqual"
                            android:text="=" />

                        <Button
                            android:id="@+id/buttonDivide"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:onClick="onClickListenerDivide"
                            android:text="/" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <SlidingDrawer
            android:id="@+id/slidingDrawer1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/panel_height"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="false"
            android:background="#00ff0000"
            android:content="@+id/content"
            android:handle="@+id/handle" >

                <LinearLayout
                    android:id="@+id/handle"
                    android:layout_width="fill_parent"
                    android:layout_height="36dp"
                    android:layout_weight=".9"
                    android:background="@color/handle_orange"
                    android:orientation="vertical"
                    android:padding="6dp" >

                </LinearLayout>
            <LinearLayout
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".9"
                    android:background="#10b286"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <Button
                            android:id="@+id/button_openpar"
                            style="@style/AdvButOrange"
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:onClick="onClickListener_openpar"
                            android:padding="0dp"
                            android:text="(" />

                        <Button
                            android:id="@+id/button_closepar"
                            style="@style/AdvButOrange"
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:onClick="onClickListener_closepar"
                            android:padding="0dp"
                            android:text=")" />

                        <Button
                            android:id="@+id/button_mod"
                            style="@style/AdvButOrange"
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:onClick="onClickListener_mod"
                            android:padding="0dp"
                            android:text="mod" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#10B286"
                        android:baselineAligned="false"
                        android:orientation="horizontal" >

                        <Button
                            android:id="@+id/button_sin"
                            style="@style/AdvButOrange"
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:onClick="onClickListener_sin"
                            android:padding="0dp"
                            android:text="sin" />

                        <Button
                            android:id="@+id/button_cos"
                            style="@style/AdvButOrange"
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:onClick="onClickListener_cos"
                            android:padding="0dp"
                            android:text="cos" />

                        <Button
                            android:id="@+id/button_tan"
                            style="@style/AdvButOrange"
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:onClick="onClickListener_tan"
                            android:padding="0dp"
                            android:text="tan" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#10B286"
                        android:orientation="horizontal" >

                        <Button
                            android:id="@+id/button_asin"
                            style="@style/AdvButOrange"
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:onClick="onClickListener_asin"
                            android:padding="0dp"
                            android:text="asin" />

                        <Button
                            android:id="@+id/button_acos"
                            style="@style/AdvButOrange"
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:onClick="onClickListener_acos"
                            android:padding="0dp"
                            android:text="acos" />

                        <Button
                            android:id="@+id/button_atan"
                            style="@style/AdvButOrange"
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:onClick="onClickListener_atan"
                            android:padding="0dp"
                            android:text="atan" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#10B286"
                        android:orientation="horizontal" >

                        <Button
                            android:id="@+id/button_exp"
                            style="@style/AdvButOrange"
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:onClick="onClickListener_exp"
                            android:padding="0dp"
                            android:text="@string/exp" />

                        <Button
                            android:id="@+id/button_root"
                            style="@style/AdvButOrange"
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:onClick="onClickListener_root"
                            android:padding="0dp"
                            android:text="@string/square_root_symbol" />

                        <Button
                            android:id="@+id/button_pi"
                            style="@style/AdvButOrange"
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:onClick="onClickListener_pi"
                            android:padding="0dp"
                            android:text="@string/pi" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </SlidingDrawer>

    </RelativeLayout>

</LinearLayout>